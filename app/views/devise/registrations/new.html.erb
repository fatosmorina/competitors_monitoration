<div class="row col-md-4 col-md-offset-4" style="margin-top: 60px;">
  <h3 class="text-center"> Register </h3>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.input_field :name, autofocus: true, class: "form-control", required: true %>
    </div>

    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
    </div>


    <div class="form-group">
      <%= f.label :password, class: "control-label", required: true %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "control-label", required: true %><br />
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
    <div class="actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
