<div class="row col-md-4 col-md-offset-4" style="margin-top: 60px;">
  <h3 class="text-center"> Log in </h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "control-label" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
